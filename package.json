{
  "name": "harmony-contract-interactor",
  "private": true,
  "version": "1.0.0",
  "description": "Contract interaction for Harmony contracts.",
  "repository": "github:harmony-one/hardhat-starter-pack",
  "author": "Jeff Hunt",
  "license": "MIT",
  "keywords": [
    "harmony",
    "smart-contracts",
    "hardhat",
    "hardhat-deploy",
    "solidity"
  ],
  "resolutions": {
    "websocket": "1.0.33"
  },
  "devDependencies": {
    "@ethereum-waffle/chai": "^3.2.2",
    "@ethersproject/wallet": "^5.0.11",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.0",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.30",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "^4.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "ethers": "^5.0.31",
    "fs-extra": "^9.1.0",
    "hardhat": "^2.0.10",
    "hardhat-deploy": "^0.7.0-beta.45",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "mocha": "^8.3.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.5",
    "solc": "^0.7.6",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.15",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "@typechain/ethers-v5": "^5.0.0",
    "hardhat-typechain": "^0.3.5",
    "ts-generator": "^0.1.1",
    "typechain": "^4.0.1",
    "websocket": "1.0.33"
  },
  "scripts": {
    "postinstall": "node ./.setup.js",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\"",
    "format": "prettier --write \"**/*.{ts,js,sol}\"",
    "test": "cross-env HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true mocha --bail --recursive test",
    "coverage": "cross-env HARDHAT_DEPLOY_FIXTURE=true hardhat --network coverage coverage",
    "dev": "hardhat node --reset --watch --export contractsInfo.json",
    "compile": "hardhat compile",
    "local:dev": "hardhat --network localhost deploy --watch",
    "local:deploy": "hardhat --network localhost deploy",
    "local:run": "cross-env HARDHAT_NETWORK=localhost ts-node --files",
    "local:export": "hardhat --network localhost export",
    "void:deploy": "hardhat deploy",
    "localnet:deploy": "hardhat --network localnet deploy",
    "localnet:export": "hardhat --network localnet export",
    "localnet:run": "cross-env HARDHAT_NETWORK=localnet ts-node --files",
    "testnet:deploy": "hardhat --network testnet deploy",
    "testnet:export": "hardhat --network testnet export",
    "testnet:run": "cross-env HARDHAT_NETWORK=testnet ts-node --files",
    "mainnet:deploy": "hardhat --network mainnet deploy",
    "mainnet:export": "hardhat --network mainnet export",
    "mainnet:run": "cross-env HARDHAT_NETWORK=mainnet ts-node --files",
    "hardhat": "hardhat"
  }
}
